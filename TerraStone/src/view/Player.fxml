<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.PlayerController">
   <bottom>
      <AnchorPane fx:id="handArea" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER" />
   </bottom>
   <top>
      <Pane BorderPane.alignment="CENTER">
         <children>
            <AnchorPane fx:id="boardArea" />
         </children>
      </Pane>
   </top>
   <right>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <AnchorPane fx:id="deckArea" onMouseClicked="#draw" style="-fx-background-color: #eb4034;">
               <children>
                  <Pane layoutY="-14.0" prefHeight="200.0" prefWidth="200.0" />
               </children></AnchorPane>
            <AnchorPane fx:id="heroArea" />
         </children>
      </VBox>
   </right>
</BorderPane>
