<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.PlayerController">
   <bottom>
      <AnchorPane fx:id="handArea" BorderPane.alignment="CENTER" />
   </bottom>
   <top>
      <Pane BorderPane.alignment="CENTER">
         <children>
            <AnchorPane fx:id="deckArea" layoutX="889.0" onMouseClicked="#draw" style="-fx-background-color: #eb4034;">
               <children>
                  <Pane layoutY="-14.0" prefHeight="200.0" prefWidth="200.0" />
               </children></AnchorPane>
            <AnchorPane fx:id="boardArea" />
         </children>
      </Pane>
   </top>
   <right>
      <AnchorPane fx:id="heroArea" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
